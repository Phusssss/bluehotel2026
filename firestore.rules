rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // Helper function to check if user has access to a hotel
    function hasHotelAccess(hotelId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/hotelUsers/$(request.auth.uid + '_' + hotelId));
    }
    
    // Helper function to get user's permission level for a hotel
    function getHotelPermission(hotelId) {
      return get(/databases/$(database)/documents/hotelUsers/$(request.auth.uid + '_' + hotelId)).data.permission;
    }
    
    // TEMPORARY: Allow unauthenticated access for testing
    // TODO: Remove this before production and use Firebase Emulator for tests
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Hotels collection
    match /hotels/{hotelId} {
      // TEMPORARY: Allow unauthenticated access for testing
      allow read, write: if true;
      // allow read: if isAuthenticated() && (hasHotelAccess(hotelId) || isSuperAdmin());
      // allow create: if isAuthenticated();
      // allow update: if isAuthenticated() && (hasHotelAccess(hotelId) || isSuperAdmin());
      // allow delete: if isSuperAdmin();
    }
    
    // Hotel Users collection (junction table for user-hotel relationships)
    match /hotelUsers/{hotelUserId} {
      // TEMPORARY: Allow unauthenticated access for testing
      allow read, write: if true;
      // allow read: if isAuthenticated() && (
      //   request.auth.uid == resource.data.userId || 
      //   hasHotelAccess(resource.data.hotelId) ||
      //   isSuperAdmin()
      // );
      // allow create: if isAuthenticated();
      // allow update: if isAuthenticated() && (
      //   hasHotelAccess(resource.data.hotelId) ||
      //   isSuperAdmin()
      // );
      // allow delete: if isAuthenticated() && (
      //   hasHotelAccess(resource.data.hotelId) ||
      //   isSuperAdmin()
      // );
    }
    
    // Room Types collection
    match /roomTypes/{roomTypeId} {
      allow read: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow create: if isAuthenticated() && hasHotelAccess(request.resource.data.hotelId);
      allow update: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow delete: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
    }
    
    // Rooms collection
    match /rooms/{roomId} {
      allow read: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow create: if isAuthenticated() && hasHotelAccess(request.resource.data.hotelId);
      allow update: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow delete: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
    }
    
    // Reservations collection
    match /reservations/{reservationId} {
      allow read: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow create: if isAuthenticated() && hasHotelAccess(request.resource.data.hotelId);
      allow update: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow delete: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
    }
    
    // Customers collection
    match /customers/{customerId} {
      allow read: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow create: if isAuthenticated() && hasHotelAccess(request.resource.data.hotelId);
      allow update: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow delete: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
    }
    
    // Companies collection
    match /companies/{companyId} {
      allow read: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow create: if isAuthenticated() && hasHotelAccess(request.resource.data.hotelId);
      allow update: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow delete: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
    }
    
    // Services collection
    match /services/{serviceId} {
      allow read: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow create: if isAuthenticated() && hasHotelAccess(request.resource.data.hotelId);
      allow update: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow delete: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
    }
    
    // Service Orders collection
    match /serviceOrders/{serviceOrderId} {
      allow read: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow create: if isAuthenticated() && hasHotelAccess(request.resource.data.hotelId);
      allow update: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow delete: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
    }
    
    // Housekeeping Tasks collection
    match /housekeepingTasks/{taskId} {
      allow read: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow create: if isAuthenticated() && hasHotelAccess(request.resource.data.hotelId);
      allow update: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow delete: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
    }
    
    // Maintenance Tickets collection
    match /maintenanceTickets/{ticketId} {
      allow read: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow create: if isAuthenticated() && hasHotelAccess(request.resource.data.hotelId);
      allow update: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
      allow delete: if isAuthenticated() && hasHotelAccess(resource.data.hotelId);
    }
  }
}
